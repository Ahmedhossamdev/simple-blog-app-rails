<%= form_with(model: [@article, @article.comments.build], local: true, class: "comment-form") do |f| %>
  <div class="form-group">
    <%= f.text_field :commenter, placeholder: "Your handle", required: true %>
  </div>

  <div class="form-group">
    <%= f.text_area :body, placeholder: "Your comment", rows: 4, required: true %>
  </div>

  <%= f.submit "Submit", class: "submit-comment" %>
<% end %>

<style>
  .comment-form {
    margin-top: 20px;
  }
  .form-group {
    margin-bottom: 10px;
  }
  .form-group input[type="text"],
  .form-group textarea {
    width: 100%;
    padding: 8px;
    background-color: #0a0a0a;
    border: 1px solid #00ff00;
    color: #00ff00;
    font-family: 'Source Code Pro', monospace;
  }
  .submit-comment {
    background-color: #00ff00;
    color: #0a0a0a;
    border: none;
    padding: 8px 16px;
    cursor: pointer;
    font-family: 'Source Code Pro', monospace;
  }
  .submit-comment:hover {
    background-color: #00cc00;
  }
</style>
