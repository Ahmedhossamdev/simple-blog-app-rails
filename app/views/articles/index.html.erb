<h1 class="blog-title">// Hacker Blog</h1>

<div class="article-list">
  <% @articles.each do |article| %>
    <div class="article-card">
      <h2 class="article-title"><%= link_to article.title, article_path(article) %></h2>
      <div class="article-meta">
        <span class="date">[<%= article.created_at.strftime("%Y-%m-%d") %>]</span>
        <span class="views">Views: <%= article.views %></span>
      </div>
      <p class="article-excerpt"><%= truncate(article.body, length: 150) %></p>
      <div class="article-actions">
        <%= link_to '> Read More', article_path(article), class: 'action-link read-more' %>
        <%= link_to '> Edit', edit_article_path(article), class: 'action-link edit' %>
        <%= button_to '> Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'action-link delete-button' %>
      </div>
    </div>
  <% end %>
</div>

<div class="pagination">
  <%= link_to '< Prev', articles_path(page: @page - 1), class: 'pagination-link' if @page > 1 %>
  <span class="page-info">Page <%= @page %> of <%= @total_pages %></span>
  <%= link_to 'Next >', articles_path(page: @page + 1), class: 'pagination-link' if @page < @total_pages %>
</div>


<style>
  .blog-title {
    color: #00ff00;
    font-size: 2em;
    margin-bottom: 30px;
    border-bottom: 2px solid #00ff00;
    padding-bottom: 10px;
    text-shadow: 0 0 5px #00ff00;
  }
  .article-list {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }
  .article-card {
    background-color: #0e0e0e;
    border: 1px solid #00ff00;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 255, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .article-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 255, 0, 0.2);
  }
  .article-title {
    margin: 0 0 10px 0;
    font-size: 1.5em;
  }
  .article-title a {
    color: #00ff00;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  .article-title a:hover {
    color: #66ff66;
  }
  .article-meta {
    color: #888;
    font-size: 0.9em;
    margin-bottom: 15px;
    display: flex;
    justify-content: space-between;
  }
  .article-excerpt {
    color: #cccccc;
    font-size: 1em;
    margin-bottom: 15px;
    line-height: 1.6;
  }
  .article-actions {
    display: flex;
    gap: 15px;
  }
  .action-link {
    color: #00ff00;
    text-decoration: none;
    background: none;
    border: none;
    cursor: pointer;
    font-size: 0.9em;
    padding: 5px 10px;
    border: 1px solid #00ff00;
    transition: background-color 0.3s, color 0.3s;
  }
  .action-link:hover {
    background-color: #00ff00;
    color: #0a0a0a;
  }
  .delete-button {
    color: #ff3333;
    border-color: #ff3333;
  }
  .delete-button:hover {
    background-color: #ff3333;
    color: #0a0a0a;
  }
  .pagination {
    margin-top: 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .pagination-link {
    color: #00ff00;
    text-decoration: none;
    border: 1px solid #00ff00;
    padding: 5px 10px;
    transition: background-color 0.3s, color 0.3s;
  }
  .pagination-link:hover {
    background-color: #00ff00;
    color: #0a0a0a;
  }
  .page-info {
    color: #888;
  }
  .new-post-link {
    display: inline-block;
    margin-top: 30px;
    color: #00ff00;
    text-decoration: none;
    border: 2px solid #00ff00;
    padding: 10px 20px;
    font-size: 1em;
    transition: background-color 0.3s, color 0.3s;
  }
  .new-post-link:hover {
    background-color: #00ff00;
    color: #0a0a0a;
  }
</style>
