<h1 class="blog-title">// Hacker Blog Posts</h1>

<div class="article-grid">
  <% @articles.each do |article| %>
    <div class="article-card">
      <h2><%= link_to article.title, article_path(article) %></h2>
      <div class="article-meta">
        <span>[<%= article.created_at.strftime("%Y-%m-%d %H:%M:%S") %>]</span>
        <span>Views: <%= article.views %></span>
      </div>
      <p class="article-excerpt"><%= truncate(article.body, length: 100) %></p>
      <div class="article-actions">
        <%= link_to '> Read More', article_path(article), class: 'read-more' %>
        <%= link_to '> Edit', edit_article_path(article), class: 'edit' %>
        <%= link_to '> Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete' %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to '+ New Post', new_article_path, class: 'new-post-link' %>

<style>
  .blog-title {
    color: #00ff00;
    font-size: 2em;
    margin-bottom: 20px;
    border-bottom: 1px solid #00ff00;
    padding-bottom: 10px;
  }
  .article-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
  }
  .article-card {
    background-color: #1a1a1a;
    border: 1px solid #00ff00;
    padding: 15px;
    transition: transform 0.3s ease;
  }
  .article-card:hover {
    transform: translateY(-5px);
  }
  .article-card h2 {
    margin-top: 0;
  }
  .article-card h2 a {
    color: #00ff00;
    text-decoration: none;
  }
  .article-meta {
    color: #888;
    font-size: 0.9em;
    margin-bottom: 10px;
  }
  .article-excerpt {
    color: #00ff00;
    font-size: 0.9em;
    margin-bottom: 15px;
  }
  .article-actions {
    margin-top: 15px;
  }
  .article-actions a {
    color: #00ff00;
    text-decoration: none;
    margin-right: 10px;
  }
  .new-post-link {
    display: inline-block;
    margin-top: 20px;
    color: #00ff00;
    text-decoration: none;
    border: 1px solid #00ff00;
    padding: 10px 15px;
    transition: background-color 0.3s;
  }
  .new-post-link:hover {
    background-color: #00ff00;
    color: #0a0a0a;
  }
</style>
