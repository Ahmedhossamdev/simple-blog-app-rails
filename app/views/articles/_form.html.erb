<div class="form-container">
  <%= form_with model: article, class: "article-form", local: true do |form| %>
    <div class="form-group">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-input", placeholder: "Enter article title" %>
      <% article.errors.full_messages_for(:title).each do |message| %>
        <div class="error-message"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :body, class: "form-label" %>
      <%= form.text_area :body, class: "form-input form-textarea", placeholder: "Write your article here", rows: 10 %>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div class="error-message"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.submit class: "submit-button" %>
    </div>
  <% end %>
</div>

<style>
  .form-container {
    max-width: 800px;
    margin: 40px auto;
    padding: 30px;
    background-color: #ffffff;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .article-form {
    display: flex;
    flex-direction: column;
  }

  .form-group {
    margin-bottom: 25px;
  }

  .form-label {
    display: block;
    margin-bottom: 8px;
    color: #2c3e50;
    font-weight: 600;
    font-size: 1.1em;
  }

  .form-input {
    width: 95%;
    padding: 12px 15px;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    font-size: 16px;
    transition: all 0.3s ease;
    justify-content: center;
  }

  .form-input:focus {
    outline: none;
    border-color: #3498db;
    box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
  }

  .form-textarea {
    resize: vertical;
    min-height: 200px;
  }

  .error-message {
    color: #e74c3c;
    font-size: 14px;
    margin-top: 5px;
  }

  .submit-button {
    background-color: #2980b9;
    color: white;
    padding: 12px 25px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 18px;
    font-weight: 600;
    transition: all 0.3s ease;
    align-self: flex-start;
  }

  .submit-button:hover {
    background-color: #3498db;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
</style>
