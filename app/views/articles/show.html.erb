<article class="article">
  <h1 class="article-title"><%= @article.title %></h1>
  <div class="article-meta">
    <span>[<%= @article.created_at.strftime("%Y-%m-%d %H:%M:%S") %>]</span>
    <span>Views: <%= @article.views %></span>
    <span>Comments: <%= @article.comments.count %></span>
  </div>
  <div class="article-body">
    <%= @article.body %>
  </div>
</article>

<section class="comments-section">
  <h2>Comments (<%= @article.comments.count %>)</h2>
  <div id="comments">
    <% if @article.comments.any? %>
      <%= render @article.comments.order(created_at: :desc) %>
    <% else %>
      <p class="no-comments">No comments yet. Be the first to comment!</p>
    <% end %>
  </div>

  <h2>Add a comment:</h2>
  <%= render 'comments/form', article: @article %>
</section>

<%= link_to '< Back to Articles', articles_path, class: "back-link" %>

<style>
  .article-title {
    color: #00ff00;
    border-bottom: 1px solid #00ff00;
    padding-bottom: 10px;
  }
  .article-meta {
    color: #888;
    font-size: 0.9em;
    margin-bottom: 20px;
  }
  .article-body {
    line-height: 1.6;
  }
  .comments-section {
    margin-top: 40px;
    border-top: 1px solid #00ff00;
    padding-top: 20px;
  }
  .comments-list {
    list-style-type: none;
    padding: 0;
  }
  .no-comments {
    color: #888;
  }
  .back-link {
    display: inline-block;
    margin-top: 20px;
    color: #00ff00;
    text-decoration: none;
    border: 1px solid #00ff00;
    padding: 10px 15px;
    transition: background-color 0.3s;
  }
  .back-link:hover {
    background-color: #00ff00;
    color: #0a0a0a;
  }
</style>
