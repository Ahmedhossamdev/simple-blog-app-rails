<div class="form-container">
  <%= form_with model: article, local: true, class: 'article-form' do |form| %>
    <% if article.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
        <ul>
          <% article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-input' %>
    </div>

    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-input', rows: 10 %>
    </div>

    <div class="actions">
      <%= form.submit class: 'submit-button' %>
    </div>
  <% end %>
</div>

<style>
  .form-container {
    background-color: #1a1a1a;
    padding: 20px;
    border: 1px solid #00ff00;
  }
  .article-form {
    color: #00ff00;
  }
  .field {
    margin-bottom: 15px;
  }
  .field label {
    display: block;
    margin-bottom: 5px;
    color: #00ff00;
  }
  .form-input {
    width: 100%;
    padding: 8px;
    background-color: #0a0a0a;
    border: 1px solid #00ff00;
    color: #00ff00;
    font-family: 'Source Code Pro', monospace;
  }
  .form-input:focus {
    outline: none;
    box-shadow: 0 0 5px #00ff00;
  }
  textarea.form-input {
    min-height: 150px;
    resize: vertical;
  }
  .submit-button {
    background-color: #00ff00;
    color: #0a0a0a;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    font-family: 'Source Code Pro', monospace;
    font-size: 1em;
    transition: background-color 0.3s;
  }
  .submit-button:hover {
    background-color: #00cc00;
  }
  #error_explanation {
    color: #ff3333;
    margin-bottom: 20px;
    background-color: #1a1a1a;
    border: 1px solid #ff3333;
    padding: 10px;
  }
  #error_explanation h2 {
    font-size: 1.2em;
    margin-bottom: 10px;
  }
  #error_explanation ul {
    margin-left: 20px;
  }
</style>
