<h1 class="article-title"><%= @article.title %></h1>

<p class="article-meta">
  Published on: <%= @article.created_at.strftime("%B %d, %Y") %> |
  Updated on: <%= @article.updated_at.strftime("%B %d, %Y") %>
</p>

<p class="article-body"><%= @article.body %></p>

<div class="article-views">
  <i class="fas fa-eye"></i>
  <span class="views-count"><%= @article.views %></span>
</div>

<div class="comments-section">
  <h2>Comments</h2>

  <% if @article.comments.any? %>
    <ul class="comments-list">
      <% @article.comments.each do |comment| %>
        <li class="comment">
          <p class="comment-content"><%= comment.content %></p>
          <p class="comment-meta">Posted by <%= comment.author %> on <%= comment.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No comments yet. Be the first to comment!</p>
  <% end %>

  <h3>Add a comment</h3>
  <%= form_with(model: [@article, @article.comments.build], local: true, class: "comment-form") do |f| %>
    <div class="form-group">
      <%= f.label :author %>
      <%= f.text_field :author, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control" %>
    </div>

    <%= f.submit "Post Comment", class: "btn submit-comment" %>
  <% end %>
</div>

<a href="<%= articles_path %>" class="back-to-articles">Back to Articles</a>

